.header{
  height: 88rpx;
  line-height: 88rpx;
}
 input{
    height: 54rpx;
    border-radius: 27rpx;
    display: inline-block;
    padding-left:60rpx;
    box-sizing: border-box; 
    
}
.input1{width:542rpx;margin: 0 32rpx;}
.input2{width:602rpx;margin-right: 20rpx}
.input_wrap{
  position: relative;
  display: inline-block;
}
.input_wrap i{
  position: absolute;
  left:60rpx;
  top:5rpx;
}
.input_wrap .search{left:30rpx}
.input_wrap .icon-wrong{left:547rpx;}
swiper{
  width:100%;
  height: 280rpx;
  margin-top:88rpx;
}
.slide-image{
  height: 100%;
  width:100%;
}
.classify{
   flex-wrap: wrap;
   text-align: center;
   padding-top:30rpx;
   padding-bottom: 10rpx;
}
.classify image{
  width:92rpx;
  height: 92rpx;
}
.classify text{
  display: block;
}
.flex_cell{
  flex: 0 0 25%;
  margin-bottom:20rpx;
}
.recommed_cont_wrap{
  padding-bottom:20rpx;
}

.recommed_cont image{
  width:210rpx;
  height: 210rpx;
}
.recommed_cont{
  margin-right: 30rpx;
  width:210rpx;
}
recommed_cont:last-child{
  margin-right: 0;
}
.img_wrap{
  width:210rpx;
  height: 210rpx;
}
.recommed_title{
  height: 80rpx;
  overflow: hidden;
}
.person_num{
  height: 32rpx;
}
.compare text{
  margin-right: 20rpx;
  height: 88rpx;
  display: inline-block;
}
.compare text:last-child{
  margin-right: 0rpx;
}
.change{
  width:124rpx;
  height: 40rpx;
